{
  "name": "as-siv-runner",
  "displayName": "as-siv-runner",
  "description": "AngelScript Runner Powered by OpenSiv3D",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "angelscript",
        "extensions": [
          ".as"
        ]
      }
    ],
    "commands": [
      {
        "command": "as-siv-runner.runMain",
        "title": "Run 'Main'",
        "icon": "$(play)"
      },
      {
        "command": "as-siv-runner.runTest",
        "title": "Run 'Test'",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "as-siv-runner.runMain",
          "when": "editorLangId == angelscript",
          "group": "navigation"
        },
        {
          "command": "as-siv-runner.runTest",
          "when": "editorLangId == angelscript",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}