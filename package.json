{
  "name": "as-siv-runner",
  "displayName": "AngelScript OpenSiv3D Runner",
  "description": "Simple AngelScript Runner Powered by OpenSiv3D for VSCode",
  "version": "0.1.4",
  "engines": {
    "vscode": "^1.87.0"
  },
  "repository": {
    "url": "https://github.com/sashi0034/as-siv-runner"
  },
  "author": {
    "name": "sashi0034"
  },
  "publisher": "sashi0034",
  "extensionDependencies": [
    "sashi0034.angel-lsp"
  ],
  "categories": [],
  "icon": "icons/as-siv-icon.png",
  "activationEvents": [
    "workspaceContains:**/*.as"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "angelscript",
        "extensions": [
          ".as"
        ]
      }
    ],
    "commands": [
      {
        "command": "as-siv-runner.runMain",
        "title": "Run 'Main'",
        "icon": "$(play)"
      },
      {
        "command": "as-siv-runner.runTest",
        "title": "Run 'Test'",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "as-siv-runner.runMain",
          "when": "editorLangId == angelscript",
          "group": "navigation"
        },
        {
          "command": "as-siv-runner.runTest",
          "when": "editorLangId == angelscript",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "as-siv-runner.runMain",
        "key": "F5",
        "when": "editorLangId == angelscript"
      },
      {
        "command": "as-siv-runner.runTest",
        "key": "shift+F5",
        "when": "editorLangId == angelscript"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}